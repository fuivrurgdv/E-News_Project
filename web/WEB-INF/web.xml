<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>controller.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AllNewsServlet</servlet-name>
        <servlet-class>controller.AllNewsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewsDetailServlet</servlet-name>
        <servlet-class>controller.NewsDetailServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManagerArticlesServlet</servlet-name>
        <servlet-class>controller.ManagerArticlesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteArticleServlet</servlet-name>
        <servlet-class>controller.deleteArticleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editArticlesServlet</servlet-name>
        <servlet-class>controller.editArticlesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddNewArticlesServlet</servlet-name>
        <servlet-class>controller.AddNewArticlesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CommentServlet</servlet-name>
        <servlet-class>controller.CommentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManagerCommentServlet</servlet-name>
        <servlet-class>controller.ManagerCommentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListComment</servlet-name>
        <servlet-class>controller.ListComment</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AllNewsServlet</servlet-name>
        <url-pattern>/allnews</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewsDetailServlet</servlet-name>
        <url-pattern>/newsdetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagerArticlesServlet</servlet-name>
        <url-pattern>/managerArticles</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteArticleServlet</servlet-name>
        <url-pattern>/deleteArticle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editArticlesServlet</servlet-name>
        <url-pattern>/editArticles</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddNewArticlesServlet</servlet-name>
        <url-pattern>/addArticles</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CommentServlet</servlet-name>
        <url-pattern>/comment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagerCommentServlet</servlet-name>
        <url-pattern>/commentManage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListComment</servlet-name>
        <url-pattern>/ListComment</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
